<article>
  <h1>Our Thoughts Thus Far.</h1>

  <section class="archives">
    <ul>
      <% _(site.posts).chain().clone().reverse().each(function(post){ %>
        <li>
          <a href="/<%= post.htmlPath() %>">Blog #<%= _(site.posts).indexOf(post) %>: <%= _(post.title()).truncate(75) %></a>
        </li>
      <% }) %>
    </ul>
  </section>
</article>
