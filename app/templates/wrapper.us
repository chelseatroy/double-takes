<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, maximum-scale=1.0, user-scalable=no">
    <link rel="alternate" type="application/rss+xml" title="<%= site.title %> | feed" href="/index.xml" />
    <title><%= site.title %><%= post ? ' | '+post.title() : '' %></title>

    <link rel="stylesheet" type="text/css" href="<%= css %>" media="all" />
    <script src="js/html5shiv-printshiv.js"></script>
  </head>

  <body class="index <% if(post && post.get('video')) { %>screencast<% } %>">
    <div class="green-strip"></div>
    <header role="banner">
      <div class="container">
        <h1>
          <a href="/">
            <span class="logo skm">Test Double |</span>
            <span class="title">double&nbsp;takes</span>
          </a>
        </h1>

        <nav>
          <a class="cta button" href="http://testdouble.com/#inquiry/pair-with-you">Pair With Us</a><a class="button" href="/archive.html">Archives</a>
        </nav>
      </div>
    </header>

    <main role="main">
      <%= yield %>
    </main>

    <footer>
      <div class="container">
        <nav>
          <a href="http://testdouble.com/#inquiry/pair-with-you">Pair with us</a><a href="/archive.html">Archives</a>
        </nav>
      </div>
    </footer>

    <script type="text/javascript" src="<%= js %>"></script>
    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-32958269-1']);
      _gaq.push(['_setDomainName', 'testdouble.com']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>
  </body>
</html>
