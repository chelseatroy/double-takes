    <meta name="viewport" content="initial-scale=1.0, width=device-width"/>

    <link rel="alternate" type="application/rss+xml" title="<%= site.title %> | feed" href="/index.xml" />
    <title><%= site.title %><%= post ? ' | '+post.title() : '' %></title>

    <link rel="stylesheet" type="text/css" href="<%= css %>" media="all" />
    <script src="/js/html5shiv-printshiv.js"></script>
  </head>


  <body>
    <span class="logo dark skm">Test Double</span>
    <a id="right-menu" href="#right-menu"><span class="menu dark skm">Menu</span></a>
    <div id="sidr-right" class="sidr right">
      <span class="close skm">Close</span>
      <p class="menu1">
        <a href="http://testdouble.com/agency.html">Our Agency</a><br/>
        <a href="http://testdouble.com/work.html">Our Work</a><br/>
        <a href="/">Our Thinking</a>
      </p>
      <p class="menu3">
        <a href="http://twitter.com/testdouble"><span class="twitter skm">Twitter</span></a>
        <a href="http://github.com/testdouble"><span class="github skm">Github</a></a>
      </p>
      <p class="menu4">
        614.349.4279<br />
        <a href="mailto:hello@testdouble.com">hello@testdouble.com</a><br />Columbus, Ohio
      </p>
    </div>

    <div class="content">
      <%= yield %>
    </div>

    <script type="text/javascript" src="<%= js %>"></script>
    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-32958269-1']);
      _gaq.push(['_setDomainName', 'testdouble.com']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>
