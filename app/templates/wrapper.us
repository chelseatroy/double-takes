<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, maximum-scale=1.0, user-scalable=no">
    <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:200,400,700' rel='stylesheet' type='text/css'>
    <link rel="alternate" type="application/rss+xml" title="<%= site.title %> | feed" href="/index.xml" />

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= site.title %><%= post ? ' | '+post.title() : '' %></title>

    <link rel="stylesheet" type="text/css" href="<%= css %>" media="all" />
  </head>

  <body class="index">
    <div class="green-strip"></div>
    <header <% if(!post || !post.get('video')) { %>class="no-video"<% } %>>
      <div class="container">
        <a href="/">
          <h1 class="logo"></h1>
          <div class="blog">double&nbsp;takes</div>
        </a>

        <nav>
          <a class="cta button" href="http://testdouble.com/#inquiry/pair-with-you">Pair With Us</a><a class="button" href="/archive.html">Archives</a>
        </nav>
      </div>
    </header>

    <%= yield %>

    <footer>
      <div class="container">
        <nav>
          <a href="http://testdouble.com/#inquiry/pair-with-you">Pair with us</a><a href="/archive.html">Archives</a>
        </nav>
      </div>
    </footer>

    <script type="text/javascript" src="<%= js %>"></script>
    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-32958269-1']);
      _gaq.push(['_setDomainName', 'testdouble.com']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>
  </body>
</html>
